<header class="page-header report-header">
    <h2>Laporan Biaya</h2>
    <div class="filter-container">
        <label for="biaya-start-date">Dari:</label>
        <input type="date" id="biaya-start-date">
        <label for="biaya-end-date">Sampai:</label>
        <input type="date" id="biaya-end-date">
        <button id="biaya-filter-btn" class="btn btn-filter">Terapkan</button>
        <button id="biaya-export-btn" class="btn btn-export"> <i class="ri-file-excel-2-line"></i> Ekspor</button>
    </div>
</header>
<div class="table-container card">
    <table id="tabel-laporan-biaya">
        <thead>
            <tr>
                <th>Tanggal</th>
                <th>Kode</th>
                <th>Uraian</th>
                <th>Uang Masuk (Rp)</th>
                <th>Uang Keluar (Rp)</th>
                <th>Sisa Saldo (Rp)</th>
                <th>Keterangan</th>
            </tr>
        </thead>
        <tbody id="tabel-laporan-biaya-body"></tbody>
        <tfoot id="tabel-laporan-biaya-foot">
            <tr>
                <td colspan="3" style="text-align: right; font-weight: bold;">TOTAL</td>
                <td id="biaya-total-masuk" class="text-right text-success">Rp 0</td>
                <td id="biaya-total-keluar" class="text-right text-danger">Rp 0</td>
                <td colspan="2"></td>
            </tr>
        </tfoot>
    </table>
</div>