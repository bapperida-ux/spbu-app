<header class="page-header"><h2>Input Kode Biaya</h2></header>
<div class="content-layout">
    <div class="form-container card">
        <h3 id="form-kode-biaya-title">Formulir Kode Biaya</h3>
        <form id="form-kode-biaya">
            <div class="form-group">
                <label for="kode-biaya-kode">Kode Biaya</label>
                <input type="text" id="kode-biaya-kode" placeholder="Contoh: 5111" required>
                <p class="helper-text">Kode tidak boleh duplikat.</p>
            </div>
            <div class="form-group">
                <label for="kode-biaya-uraian">Uraian</label>
                <input type="text" id="kode-biaya-uraian" placeholder="Contoh: Gaji Karyawan" required>
            </div>
            <div class="form-group">
                <label for="kode-biaya-jenis">Jenis</label>
                <select id="kode-biaya-jenis" required>
                    <option value="">-- Pilih Jenis --</option>
                    <option value="Penambah">Penambah</option>
                    <option value="Pengurang">Pengurang</option>
                    <option value="Pindahan">Pindahan</option>
                </select>
            </div>
            <div class="form-buttons">
                <button type="submit" class="btn btn-simpan">Simpan</button>
                <button type="button" class="btn btn-batal">Batal</button>
            </div>
        </form>
    </div>
    <div class="table-container card">
        <h3>Data Kode Biaya Tersimpan</h3>
        <table id="tabel-kode-biaya">
            <thead>
                <tr>
                    <th>Kode</th>
                    <th>Uraian</th>
                    <th>Jenis</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody id="tabel-kode-biaya-body"></tbody>
        </table>
    </div>
</div>