<header class="page-header"><h2>Input Biaya</h2></header>
<div class="content-layout">
    <div class="form-container card">
        <h3 id="form-input-biaya-title">Formulir Input Biaya</h3>
        <form id="form-input-biaya">
            <div class="form-group">
                <label for="input-biaya-kode">Kode Biaya</label>
                <select id="input-biaya-kode" required></select>
            </div>
            <div class="form-group">
                <label for="input-biaya-tanggal">Tanggal</label>
                <input type="date" id="input-biaya-tanggal" required>
            </div>
            <div class="form-group">
                <label for="input-biaya-total">Total (Rp)</label>
                <input type="number" id="input-biaya-total" placeholder="Contoh: 150000" required>
            </div>
            <div class="form-group">
                <label for="input-biaya-keterangan">Keterangan</label>
                <textarea id="input-biaya-keterangan" rows="3" placeholder="Tulis keterangan tambahan (jika ada)"></textarea>
            </div>
            <div class="form-buttons">
                <button type="submit" class="btn btn-simpan">Simpan Transaksi</button>
                <button type="button" class="btn btn-batal">Batal</button>
            </div>
        </form>
    </div>
    <div class="table-container card">
        <h3>Data Biaya Hari Ini</h3>
        <table id="tabel-input-biaya">
            <thead>
                <tr>
                    <th>Tanggal</th>
                    <th>Kode</th>
                    <th>Uraian</th>
                    <th>Jenis</th>
                    <th class="text-right">Total (Rp)</th>
                    <th>Keterangan</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody id="tabel-input-biaya-body"></tbody>
        </table>
    </div>
</div>